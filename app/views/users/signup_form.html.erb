<h1>Sign Up</h1>

<form action="/insert_user_record">
  <label for="username">Username</label>
  <input id="username" placeholder="Enter a username..." name="input_username">
  
  <label for="password">Password</label>
  <input id="password" type="password" placeholder="Enter a password..." name="input_password">
  
  <label for="password_confirmation">Password</label>
  <input id="password_confirmation" type="password" placeholder="Confirm your password..." name="input_password_confirmation">
  
  <button>Sign Up!</button>
</form>
